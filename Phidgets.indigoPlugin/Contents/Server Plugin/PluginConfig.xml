<?xml version="1.0"?>
<PluginConfig>
	<Field id="at0" type="textfield" defaultValue='10'>
	    <Label>Max time (secs) to wait for a Phidget to attach:</Label>
	</Field>

	<Field id="simpleSeparator0" type="separator"/>

	<Field id="topLabel" type="label">
		<Label>
		Set the level of information recorded to the Indigo log.</Label>
	</Field>
	
	<Field id="showDebugInfo1" type="menu" defaultValue="0">
		<Label>Logging level</Label>
		<List>
			<Option value="0">None</Option>
			<Option value="1">Normal</Option>
			<Option value="2">Verbose</Option>
			<Option value="3">Debug</Option>
			<Option value="4">Intense Debug</Option>
		</List>
	</Field>
	
	<Field id="v0" type="label" visibleBindingId="showDebugInfo1" visibleBindingValue="0">
		<Label>									No logging at all (not suggested)</Label>
	</Field>
	<Field id="v1" type="label" visibleBindingId="showDebugInfo1" visibleBindingValue="1">
		<Label>									Normal operating events</Label>
	</Field>
	<Field id="v2" type="label" visibleBindingId="showDebugInfo1" visibleBindingValue="2">
		<Label>									Detailed information</Label>
	</Field>
	<Field id="v3" type="label" visibleBindingId="showDebugInfo1" visibleBindingValue="3,4">
		<Label>		If you are having problems with the plugin (or you are
		instructed by support), you can enable debugging Use with 
		caution. This level is not suggested for regular operation.</Label>
	</Field>

	<Field id="simpleSeparator1" type="separator"/>

	<Field id="pl0" type="checkbox" defaultValue="False">
		<Label>Enable low-level Phidgets libs logging</Label>
	</Field>

	<Field id="pl1" type="menu" defaultValue="1" visibleBindingId="pl0" visibleBindingValue="true">
		<Label>Logging level
		(Critical shows the least 
		amount of information, 
		Verbose, the most)</Label>
		<List>
			<Option value="1">Critical</Option>
			<Option value="2">Error</Option>
			<Option value="3">Warning</Option>
			<Option value="4">Debug</Option>
			<Option value="5">Info</Option>		
			<Option value="6">Verbose</Option>
		</List>
	</Field>

	<Field id="pl2" type="textfield" defaultValue='/var/tmp/phidgetlibs.log' visibleBindingId="pl0" visibleBindingValue="true">
	    <Label>Full pathname of log file</Label>
	</Field>


</PluginConfig>
