<?xml version="1.0"?>
<Devices>
	<Device id="voltageInput" type="custom">
		<Name>Voltage Input</Name>
		<ConfigUI>
			<Field id="voltageInputType" type="menu">
				<Label>Voltage input type:</Label>
				<List class="self" method="getPhidgetTypeMenu" filter="VoltageSensorType"/>
			</Field>

			<Field id="exampleLabel" type="label">
				<Label>The following sections will (eventually) be populated automatically.
				</Label>
			</Field>

			<Field id="serialNumber" type="textfield">
					<Label>Serial number:</Label>
			</Field>
			<Field id="channel" type="textfield">
					<Label>Channel:</Label>
			</Field>
 		    <Field id="isVINT" type="checkbox" defaultValue="False">
				<Label>VINT hub?</Label>
			</Field>
			<Field id="isHubPortDevice" type="checkbox" defaultValue="False" visibleBindingId="isVINT" visibleBindingValue="true" alwaysUseInDialogHeightCalc="true">
				<Label>Hub port device?</Label>
			</Field>
			<Field id="hubPort" type="textfield" visibleBindingId="isVINT" visibleBindingValue="true" alwaysUseInDialogHeightCalc="true">
				<Label>Hub port:</Label>
			</Field>
		</ConfigUI>
	</Device>

